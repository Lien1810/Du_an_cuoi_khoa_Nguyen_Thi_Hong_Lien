<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="CategoryTest" verbose="1"  >
    <parameter name="BROWSER" value="edge"> </parameter>

    <test name="Add Category" parallel="methods" >
        <classes>
            <class name="BT_AT04.test.CategoryTest">
                <methods>
                    <exclude name="testAddCategory_Success"> </exclude>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Edit category" >
        <classes>
            <class name="BT_AT04.test.CategoryTest">
                <methods>
                    <include name="testEditCategory_Success"> </include>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Delete category" >
        <classes>
            <class name="BT_AT04.test.CategoryTest">
                <methods>
                    <include name="testDeleteCategory_Success"> </include>
                </methods>
            </class>
        </classes>
    </test>


</suite>
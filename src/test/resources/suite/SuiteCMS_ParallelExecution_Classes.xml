<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="eCommerce CMS" verbose="1">
    <test name="Flow test" >
        <parameter name="BROWSER" value="chrome"> </parameter>
        <classes>
            <class name="BT_AT04.test.FlowTest"> </class>
        </classes>
    </test>

    <test name="Login, Dashboard, Brand" parallel="classes">
        <parameter name="BROWSER" value="edge"></parameter>
        <classes>
            <class name="BT_AT04.test.LoginTest"></class>
            <class name="BT_AT04.test.DashboardTest"></class>
            <class name="BT_AT04.test.BrandTest"></class>
            <class name="BT_AT04.test.FlowTest"></class>
        </classes>
    </test>

    <test name="Category, Product" parallel="classes">
        <parameter name="BROWSER" value="chrome"  ></parameter>
        <classes>
            <class name="BT_AT04.test.CategoryTest"></class>
            <class name="BT_AT04.test.ProductTest"></class>
        </classes>
    </test>

</suite>